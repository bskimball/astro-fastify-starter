{
  "$schema": "https://json.schemastore.org/tsconfig",
  "include": ["./src/api"],
  "compilerOptions": {
    "noEmit": true,
    "allowImportingTsExtensions": true,
    "strict": true,
    "moduleResolution": "Node16",
    "target": "ES2022",
    "module": "Node16",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "verbatimModuleSyntax": true,
    "stripInternal": true,
    "outDir": "./dist"
  }
}
